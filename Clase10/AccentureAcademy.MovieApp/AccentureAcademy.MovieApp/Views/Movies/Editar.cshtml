@model AccentureAcademy.MovieApp.Models.Movie

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <header class="jumbotron text-center">
        Editar Pelicula
    </header>
    <main class="container">
        <form method="post">
            <label for="txtTitulo">Post</label>
            <input type="text" id="txtTitulo" name="Title" value="@this.Model.Title" placeholder="Ingrese un título" />
            <label for="dateFechaEstreno"></label>
            <input type="date" id="dateFechaEstreno" name="ReleaseDate" value="@String.Format("{0:yyyy-MM-dd}",this.Model.ReleaseDate)" />
            <label for="numDuracion">Duracion</label>
            <input type="number" id="numDuracion" name="RunningTime" value="@this.Model.RunningTime" placeholder="Ingrese la duracion en minutos" />

            <button class="btn btn-primary">Enviar</button>
        </form>
    </main>

    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
</body>
</html>
